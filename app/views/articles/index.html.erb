<div class="container">
<h1 class="text-center"> List of all articles</h1>

<%= @article.each do |item|%>
<div class="row justify-content-md-center" >
<div class="col-8">
<div class="card text-center my-5" >
  <div class="card-header">
    Article
  </div>
  <div class="card-body ">
    <h5 class="card-title"><%= item.title%></h5>
    
    <p class="card-text"><%= item.description %></p>
    <%= link_to "View", article_path(item), class:"btn btn-outline-primary"%>
    <%= link_to "Edit" , edit_article_path(item), class:"btn btn-outline-success" %>
    <%= link_to "Delete", article_path(item) ,data: { "turbo-method": :delete , "turbo-confirm": "Are you sure ?"} , class:"btn btn-outline-danger"  %>
  </div>
  <div class="card-footer text-muted">
    <small> 
        created <%= time_ago_in_words(item.created_at) %> ago, 
        edited  <%= time_ago_in_words(item.updated_at) %> ago  
           </small>
  </div>
</div>
</div>
</div>
<% end%>
